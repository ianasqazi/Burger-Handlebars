<div class="container-fluid">
    <div class="row text-center">
        <img src="../public/assets/images/hexi.psd">

        <h1>BURGERIZER</h1>
    </div>
</div>

{{!-- ===================================== --}}
<div class="container-fluid">
    <div class="row">
        <div id="devouredBurger" class="col">
            <div>
                <h5>DEVOURED BURGERS</h5>
            </div>
            <div>
                <ul>
                    {{#each burgers}}
                        {{#if devoured}}
                            <li>       
                                {{this.burger_name}}
                            </li>
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>

        <div id="notDevouredBurger" class="col">
            <div>
                <h5>NOT DEVOURED BURGERS</h5>
            </div>
            <div>
                <ul>
                    {{#each burgers}}
                        {{#unless devoured}}
                            <li>       
                                {{this.burger_name}}
                                <button data-id="{{this.id}}" class="devourIt">DEVOUR BURGER</button>
                            </li>
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>

{{!-- ===================================== --}}
<div class="container-fluid">

    <div class="row text-center">
        <h2>Add a Burger</h2>
    </div>

    <div class="row">
        <form class="create-form">

        <div class="form-group">
            <label for="burgerName">NAME:</label>
            <input type="text" id="burgerName" name="burgerName">

        <button type="submit" id="newBurger">Add Burger</button>
        </form>
    </div>


</div>


